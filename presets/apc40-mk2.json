{
  "name": "APC40 mk2 Default Mapping",
  "deviceMatchers": ["apc40", "apc 40"],
  "version": "1.0.0",
  "description": "Professional VJ mapping for APC40 mk2 - trigger FX on clip grid, intensities on faders, scenes on scene buttons",
